@model DryLightning.Models.UserLocationListDTO

@{
    ViewBag.Title = "UserLocationList";
}

<h2>Your Locations</h2>
<p>
    @Html.ActionLink("Add A New Location", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Location Name
        </th>
        <th>
            Latitude
        </th>
        <th>
            Longitude
        </th>
        <th>
            Detection Threshold Radius (in miles)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.UserLocations)
    {
        <tr>
            <td>
                @item.UserLocationName
            </td>
            <td>
                @item.Latitude
            </td>
            <td>
                @item.Longitude
            </td>
            <td>
                @item.Radius
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserLocationId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserLocationId })
            </td>
        </tr>
    }

</table>
